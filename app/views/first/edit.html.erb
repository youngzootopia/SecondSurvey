<h1><%= @first_survey.sUserID %>의 ID = <%= @first_survey.id %> 1차 설문을 수정합니다.</h1>

<% content_for :head do %>
  <%= stylesheet_link_tag    'custom/signup', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<% provide(:title, 'FirstSurvey') %>
<div class="row row-centered">
  <div class="col-xs-12 col-sm-12 col-md-10 col-lg-9 col-centered">
    <%= form_for(@first_survey, :url => "/admin/first/edit#{@first_survey.id}",  :html => {name: 'first', method: 'POST'}) do |f| %>
      <%= f.hidden_field :id, class: 'form-control' %>
        <div class="form-group form-inline">
		    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
		      <%= f.label :선호도 %>
		    </div>
		    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
		      <%= f.text_field :preference, class: 'form-control'%>
		    </div>
			<div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
		      <%= f.label :사유 %>
		    </div>
		    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
		      <%= f.text_field :reason, class: 'form-control' %>
		    </div>
		  </div>
      <button type="submit" class="btn btn-lg btn-default btn-group-justified" >저장</button>
    <% end %>
    </div>
</div>