<p id="notice"><%= notice %></p>

<style>
  th {
    font-size: 20px;
  }
  
  td {
    border: 1px solid #f0f0f0;
  }
</style>

<h1>2차 쿼리 설문 리스트</h1>

<table width=100%>
  <thead>
    <tr>
      <th>쿼리아이디</th>
      <th>샷아이디</th>
      <th>매칭점수</th>
      <th>부합도</th>
      <th>유사도</th>
      <th>선호도</th>
      <th>사유</th>
      <th>선택여부</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @secondQuerySurveys.each do |survey| %>
      <tr>
      	<td width=10%><%= survey.queryID %></td>
        <td width=10%><%= survey.shotID %></td>
        <td width=10%><%= survey.totalScore %></td>
        <td width=7%><%= survey.correct %></td>
        <td width=7%><%= survey.similarity %></td>
        <td width=7%><%= survey.preference %></td>
        <td width=30%><%= survey.reason %></td>
        <td width=10%><%= survey.isSelect %></td>
        <td class="menu" width=20px><%= link_to '수정', "/admin/second_query_survey/edit?queryID=#{survey.queryID}&shotID=#{survey.shotID}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>