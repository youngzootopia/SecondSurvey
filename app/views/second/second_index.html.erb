<p id="notice"><%= notice %></p>

<style>
  th {
    font-size: 20px;
  }
  
  td {
    border: 1px solid #f0f0f0;
  }
</style>

<h1>2차 쿼리 리스트</h1>

<table width=100%>
  <thead>
    <tr>
      <th>아이디</th>
      <th>유저아이디</th>
      <th>쿼리</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @secondQueries.each do |secondQuery| %>
      <tr>
      	<td width=15%><%= secondQuery.queryID %></td>
        <td width=15%><%= secondQuery.sUserID %></td>
        <td width=60%><%= secondQuery.query %></td>
        <td class="menu" width=20px><%= link_to '삭제', "/admin/second_query/delete?queryID=#{secondQuery.queryID}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :tail do %>
  <%= javascript_include_tag    'application' %>
<% end %>